<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_menu_graph"
    app:startDestination="@id/jokesFragment">

    <fragment
        android:id="@+id/jokesFragment"
        android:name="com.yakow.weber.myapplication.ui.jokes.JokesFragment"
        android:label="JokesFragment"
        tools:layout="@layout/fragment_jokes"
        >
        <action android:id="@+id/actionJokesFragmentToDetailedJokeFragment"
                app:destination="@id/detailedJokeFragment"
        />
    </fragment>

    <fragment
        android:id="@+id/sitesFragment"
        android:name="com.yakow.weber.myapplication.ui.sites.SitesFragment"
        android:label="SitesFragment"
        tools:layout="@layout/fragment_sites"
        />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.yakow.weber.myapplication.ui.about.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about"
        />
    <fragment android:id="@+id/detailedJokeFragment"
              android:name="com.yakow.weber.myapplication.ui.jokes.details.DetailedJokeFragment"
              android:label="DetailedJokeFragment"
              tools:layout="@layout/fragment_detailed_joke"
    />
    <fragment
        android:id="@+id/tabsFragment"
        android:name="com.yakow.weber.myapplication.ui.tabs.TabsFragment"
        android:label="TabsFragment"
        tools:layout="@layout/fragment_tabs"
        />

</navigation>